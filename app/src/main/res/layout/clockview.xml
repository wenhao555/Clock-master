<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_gravity="top|center_horizontal"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/clock"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:id="@+id/view_hour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/hand_hour"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:id="@+id/view_minute"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/hand_minute"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:id="@+id/view_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/hand_second"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#343434"
            android:textSize="15sp"
            android:text="中国标准时间"/>
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="10sp"
            android:text="__月__日 周__"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="15dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_marginLeft="80dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/set_by_hand"/>
                    <Button
                        android:id="@+id/button_settime_byhand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:text="手动更新时间"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_marginRight="80dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/set_by_net"/>
                    <Button
                        android:id="@+id/button_settime_bynet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:text="获取网络时间"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>